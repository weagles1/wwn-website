<audio id="music" controls>
  <source src="dreams-and-nightmares.mp3" type="audio/mpeg">
</audio>

<script>
function playMusic() {
  document.getElementById("music").play();
}

function pauseMusic() {
  document.getElementById("music").pause();
}
</script>

